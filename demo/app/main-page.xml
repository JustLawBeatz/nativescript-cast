<Page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  loaded="pageLoaded"
  class="page"
  xmlns:cast="nativescript-cast"
>
  <ActionBar title="Cast Demo">
    <ActionItem
      ios.position="right"
      android:visibility="{{ castVisibility }}"
    >
      <StackLayout>
        <cast:CastButton
          id="cast"
          loaded="castLoaded"
          event="{{ handleEvent }}"
        />
      </StackLayout>
    </ActionItem>
  </ActionBar>

  <StackLayout>
    <ScrollView>
      <StackLayout>
        <Button
          text="Load Media"
          tap="{{ onLoadTap }}"
          class="btn btn-primary"
          isEnabled="{{ canCast }}"
        />

        <FlexboxLayout
          orientation="horizontal"
          justifyContent="space-between"
          class="controls"
        >
          <Button
            text="&#xff04b; Play"
            tap="{{ onPlayTap }}"
            class="btn btn-primary"
            isEnabled="{{ canCast }}"
          />
          <Button
            text="&#xff04c; Pause"
            tap="{{ onPauseTap }}"
            class="btn btn-primary"
            isEnabled="{{ canCast }}"
          />
          <Button
            text="&#xff04e; Seek"
            tap="{{ onSeekTap }}"
            class="btn btn-primary"
            isEnabled="{{ canCast }}"
          />
          <Button
            text="&#xff04d; Stop"
            tap="{{ onStopTap }}"
            class="btn btn-primary"
            isEnabled="{{ canCast }}"
          />
        </FlexboxLayout>

        <Button
          text="Get Media Info"
          tap="{{ onGetMediaInfoTap }}"
          class="btn btn-primary"
          isEnabled="{{ canCast }}"
        />
        <TextView
          text="{{ textData }}"
          editable="false"
          class="text-data"
          isEnabled="{{ canCast }}"
        />
      </StackLayout>
    </ScrollView>
  </StackLayout>
</Page>
