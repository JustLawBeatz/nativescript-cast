<Page
  xmlns="http://schemas.nativescript.org/tns.xsd"
  loaded="pageLoaded"
  class="page"
  xmlns:ui="nativescript-cast"
>
  <ActionBar title="Cast">
    <ActionItem visibility="{{ castVisibility }}">
      <ui:CastButton
        id="cast"
        mediaRouterEvent="{{ handleMediaRouterEvent }}"
        sessionEvent="{{ handleSessionEvent }}"
      />
    </ActionItem>
  </ActionBar>

  <StackLayout class="p-20">
    <Label text="{{ castVisibility }}" class="t-20 text-center c-black" textWrap="true"/>
    <Button
      text="Tap Me!"
      tap="{{ onTap }}"
      class="btn btn-primary btn-active"
    />
  </StackLayout>
</Page>
